        <activity
            android:name="net.raquezha.hellocharts.kotlin.AboutActivity"
            android:screenOrientation="portrait"
            android:exported="true"/>

        <activity
            android:name=".PreviewLineChartActivity"
            android:screenOrientation="portrait"
